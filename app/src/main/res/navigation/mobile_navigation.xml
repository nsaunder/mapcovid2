<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_covid">

    <fragment
        android:id="@+id/navigation_covid"
        android:name="com.example.mapcovid.MapsFragment"
        android:label="CovidMap"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_testing"
        android:name="com.example.mapcovid.TestingFragment"
        android:label="TestingMap"
        tools:layout="@layout/fragment_testing" />

    <fragment
        android:id="@+id/navigation_path"
        android:name="com.example.mapcovid.PathFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_path" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.mapcovid.ui.news.NewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/news_fragment" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.mapcovid.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>